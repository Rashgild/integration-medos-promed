<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://host:port/database</property>
        <property name="connection.password">password</property>
        <property name="connection.username">username</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="connection.pool_size">50</property>

        <mapping class="ru.integration.entities.schedule.MedosWorkcalendarEntity"/>
        <mapping class="ru.integration.entities.schedule.MedosWorkcalendardayEntity"/>
        <mapping class="ru.integration.entities.schedule.MedosWorkcalendartimeEntity"/>

        <mapping class="ru.integration.entities.medosEntities.MedosVocidc10Entity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosMedcaseEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosPatientEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosDiagnosisEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosVochospitalizationEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosVocreasonEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosVocservicestreamEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosVocvisitresultEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosVocworkplacetypeEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosWorkfunctionEntity"/>
        <mapping class="ru.integration.entities.medosEntities.MedosVocworkfunctionEntity"/>

        <mapping class="ru.integration.vocEntity.MedosMedservice"/>
    </session-factory>
</hibernate-configuration>